<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConversationActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:id="@+id/txtTitleConver"
        android:textSize="25sp"
        android:textStyle="bold"
        />

    <ListView
        android:layout_below="@+id/txtTitleConver"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/lvConver"
        >

    </ListView>
    <Button
        android:layout_below="@+id/lvConver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click me"
        android:id="@+id/btnClickme"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lvConver"
        android:layout_marginStart="11dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/btnClickme"
        android:text="Nói lại những gì bạn nghe được"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/txtQuesT"
        android:visibility="invisible"
        />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/btnClickme"
        android:layout_alignParentStart="true"
        android:layout_marginStart="149dp"
        android:layout_marginTop="73dp"
        android:src="@drawable/ic_mic"
        android:id="@+id/ibtnRecord"
        android:visibility="invisible"
        />

</RelativeLayout>