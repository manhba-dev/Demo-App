<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_app"
    tools:context=".BossActActivity">

    <TextView
        android:id="@+id/textTitleBossAct"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:textColor="#FFF"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Checkpoint Time" />
    
    <ImageView
        android:id="@+id/bigBoss"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/icboss"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        />

    <TextView
        android:id="@+id/textQuestionBossAct"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="28sp"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="Well done! Ready for Boss?" />

    <Button
        android:id="@+id/btnContBossAct"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:textAllCaps="false"
        android:textColor="@color/colorPurple"
        android:textSize="28sp"
        android:text="Continue"
        android:background="@drawable/bgbtn"
        />

    <TextView
        android:id="@+id/txtBackBossAct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to home"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textSize="22sp"
        android:textColor="#FFF"
        />



</LinearLayout>