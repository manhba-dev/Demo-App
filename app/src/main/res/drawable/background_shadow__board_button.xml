<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <corners android:radius="15dp" />

            <padding
                android:top="1.5dp"
                android:right="1.5dp"
                android:left="1.5dp"
                android:bottom="3dp"/>

            <solid android:color="#A9AAA6A6" />
        </shape>
    </item>


    <!-- Background -->
    <item>
        <shape>

            <solid android:color="#FFF" />

            <corners android:radius="15dp" />
        </shape>
    </item>

</layer-list>